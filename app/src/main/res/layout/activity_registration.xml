<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="2"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/shapes_background"
        android:id="@+id/loginBackground"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        app:layout_widthPercent="85%"
        android:inputType="textPersonName"
        android:hint="Imię"
        android:ems="10"
        android:id="@+id/registrationFirstName"
        android:textColorHint="@color/colorWhite"
        android:layout_below="@+id/loginLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:layout_width="300dp"
        />
    <EditText
        android:layout_height="wrap_content"
        app:layout_widthPercent="85%"
        android:inputType="textPersonName"
        android:hint="Nazwisko"
        android:ems="10"
        android:id="@+id/registrationLastName"
        android:textColorHint="@color/colorWhite"
        android:layout_below="@+id/registrationFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:layout_width="300dp"
        />
    <EditText
        android:layout_height="wrap_content"
        app:layout_widthPercent="85%"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/registrationEmail"
        android:textColorHint="@color/colorWhite"
        android:layout_below="@+id/registrationLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:layout_width="300dp"
        />

    <EditText
        android:layout_width="300dp"
        app:layout_widthPercent="85%"
        android:layout_height="wrap_content"
        android:hint="Hasło"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registrationPassword"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/registrationEmail"
        android:layout_marginTop="15dp"
        android:text="haslo123" />

    <Button
        android:text="ZAREJESTRUJ SIĘ"
        android:layout_width="300dp"
        app:layout_widthPercent="85%"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:layout_marginTop="20dp"
        android:background="@color/colorGrayOne"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/registrationPassword"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/primerdivisor"
        android:layout_width="300dp"
        app:layout_widthPercent="85%"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_height="1dp"
        android:layout_below="@+id/loginBtn"
        android:layout_alignStart="@+id/loginBtn" />

    <TextView
        android:text="Masz już konto? Zaloguj się"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtn"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:onClick="goToLogin" />


</android.support.percent.PercentRelativeLayout>

